<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="pnOptions" alignment="TOP_CENTER" hgap="20.0" prefHeight="35.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.mateuszfrejlich.flashcards.controller.OptionsController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleNewClicked" style="-fx-background-color: #eee; -fx-background-radius: 10;" text="New ..." GridPane.halignment="CENTER" GridPane.vgrow="SOMETIMES">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleEditClicked" style="-fx-background-color: #eee; -fx-background-radius: 10;" text="Edit" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.vgrow="SOMETIMES">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleDeleteClicked" style="-fx-background-color: #eee; -fx-background-radius: 10;" text="Delete" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.vgrow="SOMETIMES">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <ComboBox fx:id="cbxCollection" maxWidth="1.7976931348623157E308" onAction="#handleCollectionSelected" style="-fx-background-color: #eee; -fx-background-radius: 10;" GridPane.columnIndex="3" GridPane.halignment="CENTER">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </ComboBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
   </padding>
</GridPane>
